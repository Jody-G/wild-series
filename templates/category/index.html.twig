{% extends 'base.html.twig' %}
{% block title %}All categories{% endblock %}
{% block body %}
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }}</h2>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("category_show", { name: category.name }) }}">Voir les films</a>
        </div>
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}