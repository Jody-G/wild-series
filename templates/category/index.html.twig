{% extends 'base.html.twig' %}
{% block title %}Categories{% endblock %}
{% block body %}
    <h1>Toutes les categories : </h1>
    <div style="display: flex; flex-direction: column; align-items: center;">
    {% for category in categories %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h2 class="card-title">{{ category.name }}</h2>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("category_show", { categoryName: category.name }) }}" class="btn btn-primary">Voir les films d'{{ category.name }}</a>
        </div>
    </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>

    <a href="{{ path('app_index') }}" class="btn btn-primary">
        Retour à l'accueil
    </a>
{% endblock %}