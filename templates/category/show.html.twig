{% extends 'base.html.twig' %}
{% block title %}Catégorie:{% endblock %}
{% block body %}
    <h1>Toutes les séries par type </h1>
    {% for program in programs|slice(0,3) %}
        <div>
            <h2>{{ program.id }} /{{ program.title }}</h2>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
      <p> Aucune série trouvée </p>
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}