{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p><br>
    <h1> Saisons </h1>
    {% for season in seasons %}
      <h2>{{ season.id }} / {{ season.number }} - {{ season.year }} - {{ season.description }}</h2>
      <a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Voir les épisodes</a>
    {% endfor %}
  </div>
</div>

<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>

{% endblock %}