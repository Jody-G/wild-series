{% extends 'base.html.twig' %}
{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>
    <p>Catégorie : {{ program.category.name }}</p><br>

<h1>Acteurs :</h1>
<ul>
    {% for actor in program.actors %}
        <li><a href="{{ path("actor_show", { id: actor.id }) }}" class="btn btn-primary">{{ actor.name }}</a></li><br>
    {% else %}
        <li>Aucun acteur pour cette série</li>
    {% endfor %}
</ul>

    <h1> Saisons </h1>
    {% for season in seasons %}
      <h2>{{ season.number }} - {{ season.year }} - {{ season.description }}</h2>
      <a href="{{ path("program_season_show", { "program": program.id, "season": season.id }) }}" class="btn btn-primary">Voir les épisodes</a>
    {% endfor %}
  </div>
</div>
<br>
<a href="{{ path('program_index') }}" class="btn btn-primary">
    Retour à la liste des programmes
</a>

{% endblock %}