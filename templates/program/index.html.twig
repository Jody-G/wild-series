{% extends 'base.html.twig' %}
{% block title %}Programes{% endblock %}
{% block body %}
    <h1>Tout les programmes : </h1>
    <div style="display: flex; justify-content: space-around;">
    {% for program in programs %}
        <div class="card" style="width: 18rem;">
        <img src={{ program.poster }} class="card-img-top" alt="...">
        <div class="card-body">
            <h2 class="card-title">{{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p class="card-text">{{ program.summary }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-primary">Voir la fiche</a>
        </div>
        </div>
    {% endfor %}
    </div>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}